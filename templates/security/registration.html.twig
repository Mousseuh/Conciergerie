{% extends 'layout.html.twig' %}

    {% block body %}
        <h1>Inscription</h1>

        {{ form_start(form) }}

        {{ form_row(form.username, {'label': 'Pseudo', 'attr':
            {'placeholder': 'Pseudo'}}) }}
        {{ form_row(form.email, {'label': 'Adresse email', 'attr':
            {'placeholder': 'example@mail.com'}}) }}
        {{ form_row(form.password, {'label': 'Mot de passe', 'attr':
            {'placeholder': 'Mot de passe'}}) }}
        {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe', 'attr':
            {'placeholder': 'Confirmation'}}) }}

        <button type="submit" class="btn btn-success">Valider Inscription</button>
        {{ form_end(form) }}
    {% endblock %}