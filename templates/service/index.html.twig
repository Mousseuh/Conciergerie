{% extends 'layout.html.twig' %}

{% block body %}
   <div class="container">
       <h1>Service index</h1>

       <table class="table">
           <thead>
           <tr>
               <th>Nom</th>
               <th>Actions</th>
           </tr>
           </thead>
           <tbody>
           {% for service in services %}
               <tr>
                   <td>{{ service.name }}</td>
                   <td>
                       <a href="{{ path('service_edit', {'id': service.id}) }}"><i class="material-icons">create</i></a>
                       {{ include('service/_delete_form.html.twig') }}
                   </td>
               </tr>
           {% else %}
               <tr>
                   <td colspan="3">no records found</td>
               </tr>
           {% endfor %}
           </tbody>
       </table>

       <p><a class="btn-floating btn-large waves-effect waves-light red" href="{{ path('service_new') }}"><i class="new material-icons">add</i></a></p>

   </div>
{% endblock %}
