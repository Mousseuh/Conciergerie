{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Formule index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formule in formules %}
            <tr>
                <td>{{ formule.name }}</td>
                <td>
                    <a href="{{ path('formule_show', {'id': formule.id}) }}">show</a>
                    <a href="{{ path('formule_edit', {'id': formule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('formule_new') }}">Create new</a>
{% endblock %}
